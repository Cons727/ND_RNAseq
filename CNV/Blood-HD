# ------- limma for regions: duplications or deletions -m ------
options(stringsAsFactors=F)
setwd("~/Thesis/Avances/Blood/")
load("CNV_Blood-HD-m.RData")
load("HD_blood_m_NoOutliers.RData")

# All genes
library(limma)
cnv_mat <- cbind(means.ctl, means.case)
all(colnames(cnv_mat) == rownames(bHD_m))
limma_cnv <- limma4DS_fdr(cnv_mat, ifelse(bHD_m$disease == 2, 1, 0), classes_names=c("HD","Control"))
limma_cnv_up <- rownames(limma_cnv)[which(limma_cnv$logFC > 0.15 & limma_cnv$q.value <= 0.05)]
limma_cnv_dw <- rownames(limma_cnv)[which(limma_cnv$logFC < -0.15 & limma_cnv$q.value <= 0.05)]
length(limma_cnv_up) # 64 with logFC=0.15
length(limma_cnv_dw) # 53 with logFC=-0.15

# Prot genes
cnv_mat_prot <- cbind(means.ctl.prot, means.case.prot)
all(colnames(cnv_mat_prot) == rownames(bHD_m))
limma_cnv_prot <- limma4DS_fdr(cnv_mat_prot, ifelse(bHD_m$disease == 2, 1, 0), classes_names=c("HD","Control"))
limma_cnv_up <- rownames(limma_cnv_prot)[which(limma_cnv_prot$logFC > 0.15 & limma_cnv_prot$q.value <= 0.05)]
limma_cnv_dw <- rownames(limma_cnv_prot)[which(limma_cnv_prot$logFC < -0.15 & limma_cnv_prot$q.value <= 0.05)]
length(limma_cnv_up) # 59 with logFC=0.15
length(limma_cnv_dw) # 50 with logFC=-0.15

save(limma_cnv, limma_cnv_prot, cnv_mat, cnv_mat_prot, file="DE_CNV_HD-Blood-m.RData")

